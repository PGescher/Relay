generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  passwordHash String   // Encrypted password
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  // Future relationships (ready for later)
  workouts     Workout[] 
}

model Workout {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  module    String   // "GYM", "RUNNING", etc.
  status    String   // "ACTIVE", "COMPLETED"
  startTime DateTime @default(now())
  endTime   DateTime?
  
  // JSON field to store sets/reps/gps-coords depending on the module
  data      Json?    

  @@index([userId])
}